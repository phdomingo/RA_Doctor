<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.patrick.radoctor.DiseaseActivity_Activity"
                android:transitionGroup="false"
                android:id="@+id/RelativeLayoutDiseaseActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:text="Update Disease Activity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:gravity="fill_vertical"
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:onClick="onTextViewClicked"
            android:id="@+id/updateDiseaseActivity"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <TextView
            android:text="DAS28, CDAI, SDAI"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:clickable="true"
            android:gravity="fill_vertical"
            android:textColor="#ff000000"
            android:textSize="20sp"
            android:onClick="onTextViewClicked"
            android:id="@+id/viewDiseaseActivityMeasures"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Last Updated: "
                    android:textColor="#000075"
                    android:textSize="10sp"
                    android:paddingTop="15dp"
                    android:id="@+id/daLastUpdated"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_tender"
                    android:paddingTop="10dp"
                    android:textColor="#000075"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 tender joints"
                    android:id="@+id/daTender"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#ff000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_swollen"
                    android:textColor="#000075"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 swollen joints"
                    android:id="@+id/daSwollen"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#ff000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_esr"
                    android:textColor="#000075"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 mm/hr"
                    android:id="@+id/daESR"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#ff000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_crp"
                    android:textColor="#000075"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 mg/L"
                    android:id="@+id/daCRP"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#ff000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_rf"
                    android:textColor="#000075"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 U/mL"
                    android:id="@+id/daRF"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#ff000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Patient Global Assessment (PGA)"
                    android:textColor="#000075"
                    android:textSize="15sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/daPGA"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#ff000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evaluator Global Assessment (EGA)"
                    android:textColor="#000075"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/daEGA"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#ff000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cyclic Citrullinated Peptide (CCP)"
                    android:textColor="#000075"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/daCCP"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textColor="#ff000000"/>

                </LinearLayout>


            </ScrollView>

    </LinearLayout>


</RelativeLayout>
