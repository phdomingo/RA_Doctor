<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.patrick.radoctor.Das28_Activity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#66FF00"
        android:id="@+id/linearLayoutDas28_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Remission"
            android:id="@+id/classifiedLabel"
            android:textSize="25dp"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="0.0"
            android:id="@+id/scoreLabel"
            android:gravity="center|right"
            android:textSize="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/linearLayoutDas28_1"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:gravity="center_vertical"
            android:id="@+id/lLayoutDas281">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_tjc"
                android:id="@+id/tenderJointDas28"
                android:gravity="center_vertical"
                android:textColor="#ff000000"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tenderJointDas28_Edit"
                android:textSize="20dp"
                android:hint="0 - 28"
                android:gravity="center"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:gravity="center_vertical"
            android:id="@+id/lLayoutDas282">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sjc"
                android:id="@+id/swollenJointDas28"
                android:gravity="center_vertical"
                android:textColor="#ff000000"
                android:textSize="20sp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/swollenJointDas28_Edit"
                android:textSize="20sp"
                android:hint="0 - 28"
                android:gravity="center"
                android:inputType="number"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:gravity="center_vertical"
            android:id="@+id/lLayoutDas283"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_pga"
                android:id="@+id/pgaDas28"
                android:textSize="20sp"
                android:textColor="#ff000000"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pgaDas28_Edit"
                android:textSize="20sp"
                android:hint="0 - 10"
                android:gravity="center"
                android:inputType="numberDecimal"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lLayoutDas284"
            android:layout_marginTop="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_esr2"
                android:id="@+id/ESRRadio"
                android:textSize="15sp"
                android:checked="true"
                android:paddingRight="10dp"
                android:onClick="onRadioButtonClicked"
            />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_crp2"
                android:id="@+id/CRPRadio"
                android:textSize="15sp"
                android:checked="false"
                android:onClick="onRadioButtonClicked"
                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/esrcrpDas28_Edit"
                android:layout_weight="1"
                android:hint=" mm/h "
                android:textSize="20sp"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lLayoutDas286"
            android:focusable="false"
            android:visibility="invisible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_options"
                android:id="@+id/textView"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/lLayoutDas285"
                android:touchscreenBlocksFocus="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CRP Units"
                    android:id="@+id/textView2"
                    android:textSize="20sp"
                    android:textColor="#ff000000"
                    android:textIsSelectable="false"
                    android:visibility="visible"
                    android:layout_marginRight="50dp"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_mgl"
                    android:id="@+id/mglRadio"
                    android:textSize="20sp"
                    android:checked="true"
                    android:paddingRight="10dp"
                    android:onClick="onRadioButtonClicked"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/unit_mgdl"
                    android:id="@+id/mgdlRadio"
                    android:textSize="20sp"
                    android:checked="false"
                    android:onClick="onRadioButtonClicked"
                    />


            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_save"
            android:id="@+id/das28SaveButton"
            android:layout_gravity="center_horizontal"
            android:onClick="onSaveButtonClicked"/>

    </LinearLayout>


</RelativeLayout>
