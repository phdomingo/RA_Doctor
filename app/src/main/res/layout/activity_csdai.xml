<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.patrick.radoctor.CSdai_Activity">





    <LinearLayout
        android:layout_height = "match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayoutcdaisdai_0">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#66FF00"
            android:id="@+id/linearLayoutcdaisdai_1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="SDAI Remission"
                android:id="@+id/SDAIClassifiedLabel"
                android:textSize="25sp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="0.0"
                android:id="@+id/SDAIScoreLabel"
                android:gravity="center|right"
                android:textSize="25sp"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#66FF00"
            android:id="@+id/linearLayoutcdaisdai_2"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="CDAI Remission"
                android:id="@+id/CDAIClassifiedLabel"
                android:textSize="25sp"
                android:gravity="center_vertical"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="0.0"
                android:id="@+id/CDAIScoreLabel"
                android:gravity="center|right"
                android:textSize="25sp"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/patientScroll"
            android:scrollbars="none"
            android:clickable="false"
            android:fillViewport="true">

            <LinearLayout
                android:layout_height = "wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearLayoutcdaisdai_5">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:gravity="center_vertical"
                    android:id="@+id/lLayoutcsdai1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_tjc"
                        android:id="@+id/tenderJointcsdai"
                        android:gravity="center_vertical"
                        android:textColor="#ff000000"
                        android:textSize="20sp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tenderJointcsdai_Edit"
                        android:textSize="20sp"
                        android:hint="0 - 28"
                        android:gravity="center"
                        android:inputType="number"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:gravity="center_vertical"
                    android:id="@+id/lLayoutcsdai2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_sjc"
                        android:id="@+id/swollenJointcsdai"
                        android:gravity="center_vertical"
                        android:textColor="#ff000000"
                        android:textSize="20sp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/swollenJointcsdai_Edit"
                        android:textSize="20sp"
                        android:hint="0 - 28"
                        android:gravity="center"
                        android:inputType="number"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:gravity="center_vertical"
                    android:id="@+id/lLayoutcsdai3"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_pga"
                        android:id="@+id/pgacsdai"
                        android:textSize="20sp"
                        android:textColor="#ff000000"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pgacsdai_Edit"
                        android:textSize="20sp"
                        android:hint="0 - 10"
                        android:gravity="center"
                        android:inputType="numberDecimal"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:gravity="center_vertical"
                    android:id="@+id/lLayoutcsdai4"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_ega"
                        android:id="@+id/egacsdai"
                        android:textSize="20sp"
                        android:textColor="#ff000000"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/egacsdai_Edit"
                        android:textSize="20sp"
                        android:hint="0 - 10"
                        android:gravity="center"
                        android:inputType="numberDecimal"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lLayoutcsdai5"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_crp2"
                        android:id="@+id/crpcsdai"
                        android:textSize="20sp"
                        android:textColor="#ff000000"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/crpcsdai_Edit"
                        android:layout_weight="1"
                        android:hint="@string/unit_mgl"
                        android:textSize="20sp"
                        android:inputType="number"
                        android:selectAllOnFocus="true"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_options"
                    android:id="@+id/textView"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:id="@+id/lLayoutcsdai6"
                    android:touchscreenBlocksFocus="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CRP Units"
                        android:id="@+id/csdaiCRPUnits"
                        android:textSize="20sp"
                        android:textColor="#ff000000"
                        android:textIsSelectable="false"
                        android:visibility="visible"
                        android:layout_marginRight="50dp"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_mgl"
                        android:id="@+id/mglCSDAIRadio"
                        android:textSize="20sp"
                        android:checked="true"
                        android:paddingRight="10dp"
                        android:onClick="onRadioButtonClicked"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_mgdl"
                        android:id="@+id/mgdlCSDAIRadio"
                        android:textSize="20sp"
                        android:checked="false"
                        android:onClick="onRadioButtonClicked"
                        />
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_save"
                    android:id="@+id/csdai_saveButton"
                    android:layout_gravity="center_horizontal"
                    android:onClick="onButtonClicked"/>

                </LinearLayout>
            </ScrollView>
    </LinearLayout>

</RelativeLayout>
