<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.patrick.radoctor.PatientStatistics_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Patient Demographics"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/patientDemographics"
            android:textSize = "20sp"
            android:clickable="true"
            android:onClick = "onClick"
            android:gravity="fill_vertical"
            android:textColor="#ff000000"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <TextView
            android:text="Patients Diagnosis Summary"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/patientDiagnosisSummary"
            android:textSize = "20sp"
            android:clickable="true"
            android:onClick = "onClick"
            android:gravity="fill_vertical"
            android:textColor="#ff000000"/>

    </LinearLayout>



</RelativeLayout>
