<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.patrick.radoctor.DiseaseActivityMeasures_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Last Updated: "
            android:textColor="#000075"
            android:textSize="10sp"
            android:id="@+id/measureLastUpdated"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAS28"
            android:paddingTop="10dp"
            android:textColor="#000075"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      DAS28-ESR Score:"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/measureDas28esr"
            android:textColor="#ff000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      DAS28-CRP Score:"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/measureDas28crp"
            android:textColor="#ff000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDAI"
            android:paddingTop="10dp"
            android:textColor="#000075"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      SDAI Score:"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/measureSDAI"
            android:textColor="#ff000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CDAI"
            android:paddingTop="10dp"
            android:textColor="#000075"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      CDAI Score:"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:id="@+id/measureCDAI"
            android:textColor="#ff000000"/>

    </LinearLayout>

</RelativeLayout>
